<% provide :title, t(".title") %>
<div class="login-form">
<h2 class="text-center"><%= t ".reset_password" %></h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="field">
    <%= f.label :password, t(".new_password") %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: t(".new_password"), class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, t("confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: t(".new_password"), class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t("change_my_password"), class: "mt-16 btn btn-primary form-control" %>
  </div>
<% end %>
  <%= render "devise/shared/links" %>
</div>
