<%= form_for @report do |f| %>
  <%= render "shared/error_messages", object: @report %>
  <%= f.label :report_date %>
  <%= f.date_field :report_date, class: "form-control" %>
  <%= f.label :today_plan %>
  <%= f.text_area :today_plan, class: "form-control" %>
  <%= f.label :today_work %>
  <%= f.text_area :today_work, class: "form-control" %>
  <%= f.label :today_problem %>
  <%= f.text_area :today_problem, class: "form-control" %>
  <%= f.label :tomorow_plan %>
  <%= f.text_area :tomorow_plan, class: "form-control" %>
  <%= hidden_field_tag :department_id, @department.id %>
  <%= f.label :assign_to %>
  <%= f.collection_select :to_user_id, @managers, :user_id, :full_name, options ={:prompt =>
      t(".no_assign")}, :class =>"form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary mt-16 form-control" %>
<% end %>
