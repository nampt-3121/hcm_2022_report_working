<% provide :title, @user.full_name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, Settings.user.small_avatar_width, Settings.user.small_avatar_height %>
        <%= @user.full_name %>
        <h5>
          <span class="glyphicon glyphicon-play"></span>
          <%= t ".joined_time", time: time_ago_in_words(@user.created_at) %>
        </h5>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <h2><%= t "department" %></h2>
  <div class="row text-center slideanim">
    <%= render @departments %>
  </div>
  <%== pagy_bootstrap_nav @pagy %>
</div>
