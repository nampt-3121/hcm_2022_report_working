<% provide :title, @user.full_name %>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= @user.full_name %></h6>
  </div>
  <div class="card-body">
    <div class="text-center">
      <%= gravatar_for @user, Settings.department.avatar_width, Settings.department.avatar_height, "img-fluid px-3 px-sm-4 mt-3 mb-4" %>
    </div>
    <h3 class="text-center"><%= @user.full_name %></h3>
    <%= t ".joined_time", time: time_ago_in_words(@user.created_at) %>
  </div>
</div>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= "#{t(".total_department")} (#{@pagy.count})" %></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".department_name" %></th>
            <th><%= t ".date_created" %></th>
            <th><%= t ".last_updated" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".department_name" %></th>
            <th><%= t ".date_created" %></th>
            <th><%= t ".last_updated" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </tfoot>
        <tbody>
          <%= render @departments %>
        </tbody>
      </table>
    </div>
  </div>
</div>
