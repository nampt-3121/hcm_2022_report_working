<li>
  <%= gravatar_for user, size: Settings.gravatar.users_size %>
  <%= link_to user.full_name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to t(".delete"), user, method: :delete,
        data: { confirm: t(".delete_confirmation") }, class: "red-text" %>
  <% end %>
</li>
