<li>
    <div class="commenterImage">
      <%= gravatar_for comment.user, 80, 40%>
    </div>
    <div class="commentText">
        <p><span class= <%= comment.user_id.eql?(current_user.id) ? "text-danger" : "text-info" %>>(<%= comment.user.full_name %>) </span><%= comment.description %></p>
        <span class="date sub-text"><%= time_ago_in_words comment.created_at %></span>
    </div>
</li>
