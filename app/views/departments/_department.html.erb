<tr>
  <td>
    <%= department.id %>
  </td>
  <td><%= link_to department.name, department %></td>
  <td><%= l department.created_at, format: :standard %></td>
  <td><%= l department.updated_at, format: :standard %></td>
  <td>
    <% if current_user.admin? %>
      <%= link_to t("edit"), edit_department_path(department), class: "text-info" %>
    <% end %>
  </td>
  <td>
    <%= link_to t(".delete"), @department, method: :delete,
      data: { confirm: t(".delete_confirmation") }, class: "text-danger" %>
  </td>
</tr>
